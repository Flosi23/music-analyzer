{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": "./",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ],
      "@": [
        "."
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@app": [
        "./src/app"
      ],
      "@lib/*": [
        "./src/lib/*"
      ],
      "@lib": [
        "./src/lib"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@components": [
        "./src/components"
      ],
      "@db/*": [
        "./db/*"
      ],
      "@db": [
        "./db"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@mocks/*": [
        "./src/mocks/*"
      ],
      "@mocks": [
        "./src/mocks"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
